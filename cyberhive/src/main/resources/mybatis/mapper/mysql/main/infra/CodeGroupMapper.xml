<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.module.codegroup.CodeGroupDao">
	<resultMap id="resultMapObj" type="com.example.module.codegroup.CodeGroupDto"></resultMap> 
	
		<sql id="selectCommon">
        FROM codeGroup as a
        WHERE 1=1
<!--         <if test="shUseNy != null and !shUseNy.equals('')">AND a.useNy = #{shUseNy}</if> -->
<!--         <if test="shDelNy != null and !shDelNy.equals('')">AND a.delNy = #{shDelNy}</if> -->
<!-- 				
				<choose>
					<when test="shOptionDate == 1">AND a.regDateTime BETWEEN #{shDateStart} AND #{shDateEnd}</when>
					<when test="shOptionDate == 2">AND a.modDateTime BETWEEN #{shDateStart} AND #{shDateEnd}</when>
				</choose>
 -->				
        <choose>
            <when test="shOption == 1">AND a.name LIKE CONCAT('%',#{shValue},'%')</when>
<!--             <when test="shOption == 2">AND a.ifcgNameEng LIKE CONCAT('%',#{shValue},'%')</when> -->
        </choose>
    </sql>
	
	<select id="selectOneCount" resultType="Integer">
	SELECT COUNT(*)
	<include refid="selectCommon"></include>
	</select>
	
	<select id="selectList" resultMap="resultMapObj">
	select aa.* from (
	  	SELECT 
			a.seq,
			a.name,
			a.delNy,
			a.regDate,
			a.modDate
		<include refid="selectCommon"></include>
		ORDER BY seq DESC
		) aa
	limit #{rowNumToShow} offset #{startRnumForMysql}
	</select>
	
	<select id="selectOne" resultMap="resultMapObj">
	SELECT 
		seq,
		name,
		delNy,
		regDate,
		modDate
	FROM
		codeGroup
		WHERE 1=1
			AND seq = #{seq}
		ORDER BY seq DESC
	</select>
	
	<insert id="insert">
    INSERT INTO codeGroup (					
		name,
		delNy,
		regDate,
		modDate
    ) values (			
        #{name},
        #{delNy},
        #{regDate},
        #{modDate}
    )
    <selectKey resultType="Integer" keyProperty="seq" order="AFTER">
        SELECT last_insert_id()
    </selectKey>		
</insert>

	
	<update id="update">
		UPDATE codeGroup SET
			name ="김지"
		WHERE seq = #{seq}
	</update>
	
	<delete id="delete">
		DELETE FROM codeGroup WHERE seq = #{seq}
	</delete> 	
	
	<update id="uelete">
		UPDATE codeGroup SET
			delNy = 1
		WHERE seq = #{seq}
	</update>
	
	<select id="getUserList" resultType="com.example.module.codegroup.CodeGroupDto">
    SELECT * 
    FROM codeGroup 
    ORDER BY seq DESC
    LIMIT #{offset}, #{pageSize}
	</select>
</mapper>